  "dependencies": {
    "@canonical/react-components": "0.13.0",
    "algoliasearch": "4.5.1",
    "firebase": "7.24.0",
    "moment": "2.29.1",
    "node-sass": "4.14.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-firestore": "1.0.1",
    "react-ga": "3.2.0",
    "react-instantsearch-dom": "6.8.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.4",
    "react-transition-group": "2.9.0",
    "slugify": "1.4.5",
    "styled-components": "3.4.10",
    "stylelint": "13.7.2",
    "stylelint-config-sass-guidelines": "7.1.0"
  },
  "scripts": {
    "": "How these scripts work: https://medium.com/@tacomanator/environments-with-create-react-app-7b645312c09d",
    "start": "sh -ac '. ./.env.dev;   firebase use dev   && react-scripts start'",
    "dev": "  sh -ac '. ./.env.dev;   firebase use dev   && react-scripts build && firebase deploy'",
    "stage": "sh -ac '. ./.env.stage; firebase use stage && react-scripts build && firebase deploy'",
    "live": " sh -ac '. ./.env.live;  firebase use live  && react-scripts build && firebase deploy'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "firebase-tools": "7.16.2",
    "node-sass": "4.14.1"
  }
}
