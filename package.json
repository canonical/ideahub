{
  "name": "Ideahub",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@canonical/react-components": "0.3.1",
    "algoliasearch": "4.0.3",
    "firebase": "10.14.1",
    "moment": "2.24.0",
    "node-sass": "4.13.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-firestore": "1.0.1",
    "react-ga": "3.1.2",
    "react-instantsearch-dom": "6.3.0",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.4.0",
    "react-transition-group": "2.3.1",
    "slugify": "1.4.0",
    "styled-components": "3.3.2",
    "stylelint": "13.6.1",
    "stylelint-config-sass-guidelines": "7.0.0"
  },
  "scripts": {
    "": "How these scripts work: https://medium.com/@tacomanator/environments-with-create-react-app-7b645312c09d",
    "start": "sh -ac '. ./.env.dev;   firebase use dev   && react-scripts start'",
    "dev": "  sh -ac '. ./.env.dev;   firebase use dev   && react-scripts build && firebase deploy'",
    "stage": "sh -ac '. ./.env.stage; firebase use stage && react-scripts build && firebase deploy'",
    "live": " sh -ac '. ./.env.live;  firebase use live  && react-scripts build && firebase deploy'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "firebase-tools": "7.14.0",
    "node-sass": "4.13.1"
  }
}
